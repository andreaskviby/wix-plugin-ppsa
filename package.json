{
  "name": "post-purchase-survey-attribution",
  "version": "1.0.0",
  "description": "A no-friction post-purchase survey shown on the Wix Stores Thank-You page that ties responses to order value and pushes the chosen channel to analytics/pixels so marketers can rebalance ad spend with confidence.",
  "main": "src/backend/events.js",
  "scripts": {
    "dev": "wix dev",
    "build": "wix build", 
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "start": "wix dev",
    "deploy": "wix publish"
  },
  "keywords": [
    "wix",
    "post-purchase",
    "survey",
    "attribution",
    "analytics",
    "ecommerce"
  ],
  "author": "Andreas Kviby",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wix-data": "^1.0.0",
    "wix-secrets": "^1.0.0",
    "wix-ecommerce": "^1.0.0",
    "wix-stores": "^1.0.0",
    "wix-app-market": "^1.0.0",
    "wix-billing": "^1.0.0"
  },
  "devDependencies": {
    "@wix/cli": "^2.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.4.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setupTests.js"],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^wix-data$": "<rootDir>/src/tests/__mocks__/wix-data.js",
      "^wix-secrets$": "<rootDir>/src/tests/__mocks__/wix-secrets.js",
      "^wix-ecommerce$": "<rootDir>/src/tests/__mocks__/wix-ecommerce.js",
      "^wix-stores$": "<rootDir>/src/tests/__mocks__/wix-stores.js",
      "^wix-billing$": "<rootDir>/src/tests/__mocks__/wix-billing.js"
    },
    "transform": {
      "^.+\\.(js|jsx)$": ["babel-jest", { "presets": [["@babel/preset-env", { "targets": { "node": "current" } }], "@babel/preset-react"] }]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(wix-.*)/)"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(js|jsx|ts|tsx)",
      "<rootDir>/src/**/?(*.)(spec|test).(js|jsx|ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/tests/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
