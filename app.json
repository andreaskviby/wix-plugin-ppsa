{
  "appId": "post-purchase-survey-attribution",
  "appName": "Post-Purchase Survey & Attribution",
  "version": "1.0.0",
  "description": "Know what really drove the sale. A no-friction post-purchase survey shown on the Wix Stores Thank-You page that ties responses to order value and pushes data to analytics platforms.",
  "category": "ecommerce",
  "type": "blocks",
  "permissions": [
    "MANAGE_STORES",
    "ACCESS_ORDERS",
    "MANAGE_CRM",
    "ACCESS_ANALYTICS",
    "MANAGE_SITE_CONTENT"
  ],
  "webhooks": [
    {
      "event": "ecom.order_created",
      "endpoint": "/api/webhooks/order-created"
    },
    {
      "event": "ecom.order_updated",
      "endpoint": "/api/webhooks/order-updated"
    }
  ],
  "blocks": {
    "widgets": [
      {
        "id": "thankyou-survey",
        "name": "Post-Purchase Survey",
        "description": "Survey widget for collecting attribution data on thank-you pages",
        "component": "ThankYouSurvey",
        "tags": ["survey", "attribution", "analytics", "ecommerce"]
      }
    ],
    "pages": [
      {
        "id": "dashboard",
        "name": "Survey Analytics Dashboard",
        "description": "Analytics dashboard for viewing survey responses and channel attribution",
        "component": "Dashboard"
      }
    ]
  },
  "billing": {
    "plans": [
      {
        "planId": "free",
        "name": "Starter",
        "price": 0,
        "currency": "USD",
        "billingCycle": "monthly",
        "features": [
          "1 active survey",
          "100 responses/month",
          "Basic dashboard analytics",
          "CSV export (limited to 500 rows)",
          "Email support"
        ]
      },
      {
        "planId": "pro",
        "name": "Professional",
        "price": 2900,
        "currency": "USD",
        "billingCycle": "monthly",
        "features": [
          "Unlimited surveys",
          "Unlimited responses",
          "Advanced analytics & filtering",
          "Server-side event forwarding",
          "Meta CAPI integration",
          "Priority support",
          "Custom survey styling"
        ]
      },
      {
        "planId": "growth",
        "name": "Growth",
        "price": 7900,
        "currency": "USD",
        "billingCycle": "monthly",
        "features": [
          "Everything in Pro",
          "SKU/product-level segmentation",
          "Multi-survey rotation",
          "Google Sheets sync",
          "Channel revenue reporting",
          "Advanced automation rules",
          "White-label options",
          "Dedicated account manager"
        ]
      }
    ]
  },
  "collections": [
    {
      "name": "pps_responses",
      "description": "Survey responses with order data",
      "permissions": "admin"
    },
    {
      "name": "pps_settings",
      "description": "App configuration and settings",
      "permissions": "admin"
    }
  ],
  "secrets": [
    "GOOGLE_ANALYTICS_ID",
    "FACEBOOK_PIXEL_ID",
    "TIKTOK_PIXEL_ID",
    "META_CAPI_ACCESS_TOKEN",
    "META_CAPI_DATASET_ID"
  ]
}